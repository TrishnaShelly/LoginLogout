@model LoginLogout.Models.user
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index","Login",FormMethod.Post))
{
    @Html.ValidationSummary(true, "Login Failed", new { @class = "text-danger" });
    <div>
        <fieldset>
            <legend>Login Form</legend>
            <div class="editor-label">@Html.LabelFor(u => u.usrName)</div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.usrName)
            @Html.ValidationMessageFor(u => u.usrName,"", new {@class = "text-danger"})
        </div>
        <div class="editor-label">@Html.LabelFor(u => u.UsrPass)</div>
        <div class="editor-field">
            @Html.PasswordFor(u => u.UsrPass)
        @Html.ValidationMessageFor(u => u.UsrPass, "", new { @class = "text-danger" })
    </div>
            <br />
    <input type="submit" value="Log In" />
</fieldset>

</div>
}

<div>
    @Html.ActionLink("Not Registered yet? Click Here", "SignUp", "Login")
</div>